{
  "name": "gmod-remote",
  "displayName": "gmod-remote",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gmod-remote.connect",
        "title": "GMod Remote: Connect"
      },
      {
        "command": "gmod-remote.disconnect",
        "title": "GMod Remote: Disconnect"
      }
    ],
    "keybindings": [
      {
        "command": "gmod-remote.search.focus",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "linux": "ctrl+shift+g"
      }
    ],
    "views": {
      "gmod-remote-search": [
        {
          "type": "webview",
          "id": "gmod-remote.search",
          "name": "GMod Remote: Search"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gmod-remote-search",
          "title": "GMod Remote: Search",
          "icon": "$(remote)"
        }
      ]
    },
    "configuration": {
      "title": "GMod Remote",
      "properties": {
        "gmodRemote.servers": {
          "type": "array",
          "default": [],
          "description": "Saved GMod remote servers",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "relay": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "encryptionKey": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "relay",
              "address",
              "password"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vscode": "^1.1.37",
    "ws": "^8.18.3"
  },
  "publisher": "asrieldev",
  "repository": {
    "type": "git",
    "url": "https://github.com/A5R13L/gmsv_remote_extension"
  },
  "homepage": "https://github.com/A5R13L/gmsv_remote_extension",
  "bugs": {
    "url": "https://github.com/A5R13L/gmsv_remote_extension/issues"
  }
}
